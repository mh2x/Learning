@inherits LayoutComponentBase

<MudThemeProvider Theme="_currentTheme"/>
<MudDialogProvider />
<MudSnackbarProvider />

<MudLayout>
    <MudAppBar Elevation="1" Style="background-image: linear-gradient( 109.6deg,  rgba(0,182,255,1) 11.2%, rgba(102,51,153,1) 91.1% );">
        <MudIconButton Icon="@Icons.Material.Filled.Menu" Color="Color.Inherit" Edge="Edge.Start" OnClick="@ToggleDrawer" />
        <MudText>Blazor Planner</MudText>
        <MudSpacer />
        <MudIconButton Icon="@Icons.Filled.Info" Color="Color.Inherit" Link="https://www.google.com" Target="_blank" />
        <MudIconButton Icon="@Icons.Custom.Brands.GitHub" Color="Color.Inherit" Link="https://github.com/MudBlazor/MudBlazor" Target="_blank" />
    </MudAppBar>
    <MudDrawer @bind-Open="@open" Elevation="1" Variant="@DrawerVariant.Temporary"
               Color="Color.Dark">
        <MudDrawerHeader>
            <MudText Typo="Typo.h6">Blazor Planner V 1.0</MudText>
        </MudDrawerHeader>
        <NavMenu />
    </MudDrawer>
    <MudMainContent Class="pt-16 px-16">
        <MudContainer Class="mt-6">
            <LoginDisplay />
            <MudAlert Severity="Severity.Success" Class="mt-16">Text inside MudContainer</MudAlert>
            @Body
        </MudContainer>
    </MudMainContent>
</MudLayout>

@code {
    bool open = false;

    void ToggleDrawer()
    {
        open = !open;
    }

    private MudTheme _currentTheme = new MudTheme()
        {
            Palette = new Palette
            {
                //AppbarBackground = "#e43652",
                //DrawerBackground = "#e43652",
                Primary = Colors.Blue.Accent2,
        },
    };
}
